<div class="col-lg-12">
  <div class="page-header">
    <h1><%= @user.name %>'s Account:</h1>
      <div class="small">
        <%= link_to "Upload Photo", new_user_photo_path(@user) %>

      </div>
  </div><!-- div for header -->

<%= form_for @user do |f| %>
  <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
  <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>

  <div class="actions"><%= f.submit "Update", :class => "btn btn-default btn-xs" %></div>
  <% end %>
  <br>
  <%= link_to "Delete", user_path(@user),
                           :data => {:confirm => "You sure?",
                                     :method => "delete"},
                           :class => "btn btn-danger btn-xs" %>




</div><!-- div for col -->
