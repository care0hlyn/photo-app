<div class="col-lg-12">
  <div class="page-header">
    <h1><%= @user.email %>'s roll:</h1>
      <div class="small">
        <%= link_to "Upload Photo", new_user_photo_path(@user) %>
      </div>
  </div><!-- div for header -->




<div class="row">
  <div class="col-md-12 portfolio-item">
    <% @photos.each do |photo| %>
    <div class="col-md-4 portfolio-item">
      <a href="/users/<%= @user.id %>/photos/<%= photo.id %>"><img class="img-responsive img-rounded" src="<%= photo.image.url(:medium) %>"></a>
    </div>
    <% end %>
  </div>
</div>


</div><!-- div for col -->
