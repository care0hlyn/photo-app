<% content_for(:title, "Sign Up | Photo App") %>

<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h4>Sign Up:</h4>
    </div>


  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :password %><br />
      <%= f.password_field :password %>
    </div>
    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation %>
    </div><br>
    <div class="actions"><%= f.submit "Sign Up", :class => "btn btn-default btn-xs"  %></div>
  <% end %>


<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
    </div>
     <h6>Copyright by: Justin, Carolyn &amp; NOT DUSTIN</h6>
  </div>
</div>


  </div><!-- div for col -->
</div><!-- div for row -->


