<% content_for(:title, "Login | Photo App") %>

<div class="row">
  <div class="col-lg-12">
    <div class="page-header">
      <h4>Login:</h4>
    </div>

<%= form_tag sessions_path do %>
  <div class="field">
          <%= label_tag :email %><br />
          <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
          <%= label_tag :password %><br />
          <%= password_field_tag :password %>
  </div><br>
  <div class="actions"><%= submit_tag "Log In" %>
<% end %>


  </div><!-- div for col -->
</div><!-- div for row -->
